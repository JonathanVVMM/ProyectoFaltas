<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFaltas.Views.ViewTeacherNonAttendances"
             BackgroundColor="{StaticResource Gray200}">

    <Grid ColumnDefinitions="*,1.5*" Padding="20" ColumnSpacing="20">

        <Frame Grid.Column="0" VerticalOptions="Start" IsEnabled="False">

            <VerticalStackLayout Spacing="10">
                <Label Text="Profesor del que son las faltas" HorizontalOptions="Center"/>

                <VerticalStackLayout>
                    <Grid RowDefinitions="*,*,*" RowSpacing="10">

                        <VerticalStackLayout Grid.Row="0">
                            <Label Text="Nombre"/>
                            <Entry  Text="{Binding ProfesorMostrado.Nombre}" BackgroundColor="LightGray"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="1">
                            <Label Text="Apellidos" />
                            <Entry  Text="{Binding ProfesorMostrado.Apellidos}"  BackgroundColor="LightGray"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2">
                            <Label Text="Tipo" />
                            <Entry Text="{Binding ProfesorMostrado.Tipo}"  BackgroundColor="LightGray"/>
                        </VerticalStackLayout>

                    </Grid>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Frame>

        <Frame Grid.Column="1">

            <Grid RowDefinitions="auto,auto" RowSpacing="10">
                <Grid ColumnDefinitions="auto,*" Grid.Row="0" ColumnSpacing="10">
                    <Label Grid.Column="0" Text="Buscar falta: " VerticalOptions="Center"/>
                    <Entry Grid.Column="1" Placeholder="año | formato = aaaa/aaaa | ejemplo = 2024/2025" VerticalOptions="Center"/>
                </Grid>

                <Grid  Grid.Row="1" HorizontalOptions="Center">
                    <ScrollView>

                        <CollectionView x:Name="ListaFaltaCalendario" ItemsSource="{Binding ListaFaltas, Mode=TwoWay}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="2"
                                                 VerticalItemSpacing="5" HorizontalItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="0">
                                        <Grid RowDefinitions="auto,auto,auto">
                                            <HorizontalStackLayout Spacing="10" Grid.Row="0">
                                                <Label Text="Nombre:"/>
                                                <Label Text="{Binding profesorNombreApellido}"/>
                                            </HorizontalStackLayout>

                                            <HorizontalStackLayout Spacing="10" Grid.Row="1">
                                                <Label Text="Tipo falta:"/>
                                                <Label Text="{Binding nombreTipoFalta}"/>
                                            </HorizontalStackLayout>

                                            <HorizontalStackLayout Spacing="10" Grid.Row="2">
                                                <Label Text="Ultima modificaión:"/>
                                                <Label Text="{Binding UltimaModificacion}"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>

            </Grid>



        </Frame>

        <Button Text="Volver a Calendario" VerticalOptions="End" HorizontalOptions="Start"/>
        <Button Text="Volver a Crear Profesores" VerticalOptions="End" HorizontalOptions="End"/>

    </Grid>



</ContentPage>